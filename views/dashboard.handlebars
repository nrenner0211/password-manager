<div class="section">
  <div class="card has-background-grey-light">
    {{!-- <div class="columns"> --}}
      <div class="column card has-background-white-ter">
        <header class="card-header center">add to vault</header>

        <form class="new-item-form">

          <label for="title"></label>
          <input type="text" id="title" class="field input" name="title"
          placeholder="Account Nickname" />

          <label for="content"></label>
          <input id="content" class="field input" name="content"
          placeholder="Password" />

          <button type="submit" class="new-item-form button is-primary is-outlined">add<i
              class="fa-solid fa-plus"></i></button>
        </form>
      </div>
    {{!-- </div> --}}
  </div>


  {{! LOGO }}

  <section class="section is-small">
    <i id="logo" class="center fa-solid fa-lock"></i>
  </section>

  {{#if items.length}}
  <div class="section">
    <div class="card has-background-grey-light">
      <div class="column card has-background-white-ter">
        <header class="card-header center">your vault</header>
        <div class="box vault-box has-background-white-bis">
          <div class="columns">
            {{#each items as |item|}}
            <div class="column">
              {{> item-info item}}
              <a href="/dashboard/edit/{{item.id}}" class="edit-link button is-primary is-outlined">edit</a>
            </div>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{/if}}

  <script src="/javascript/add-item.js"></script>