<div class="section">
  <div class="container">
    <div class="columns">
      <div class="column card">
        <header class="card-header center">add to vault</header>

        <form class="new-item-form">

          <label for="title">Nickname</label>
          <input type="text" id="title" class="field input" name="title" />

          <label for="content">Secure Item</label>
          <input id="content" class="field input" name="content" />

          <button type="submit" class="new-item-form button is-primary is-outlined">add<i
              class="fa-solid fa-plus"></i></button>
        </form>
      </div>
    </div>
  </div>


  {{! LOGO }}

  <section class="section is-large">
    <i id="logo" class="center fa-solid fa-lock"></i>
  </section>

  {{#if items.length}}
  <div class="container">
    <div class="columns">
      <div class="column card">
        <header class="card-header center">your vault</header>
        <div class="box">
          <ol>
            {{#each items as |item|}}
            <li>
              {{> item-info item}}
              <a href="/dashboard/edit/{{item.id}}" class="edit-link">edit</a>
            </li>
            {{/each}}
          </ol>
        </div>
      </div>
    </div>
  </div>
  {{/if}}

  <script src="/javascript/add-item.js"></script>